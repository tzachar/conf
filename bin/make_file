#!/bin/bash

FILE_NAME=""
HEADER_NAME=""

for arg in $*; do 
	if [ "$arg" == "-help" ]; then
		echo "Usage: "
		echo "       -help this help message"
		echo "       -file:name create a file with this name"
		echo "       -head:name header name"

	elif (echo $arg | fgrep -- "-file" > /dev/null ); then
		FILE_NAME=$(echo $arg | sed 's/-file://')
	elif (echo $arg | fgrep -- "-head" > /dev/null); then
		HEADER_NAME=$(echo $arg | sed 's/-head://')
	fi
done

while [ -z "$FILE_NAME" ]; do
	echo -n "your file name: "
	read FILE_NAME
done

while [ -z "$HEADER_NAME" ]; do
	echo -n "your header name: "
	read HEADER_NAME
done

if [ ! -a $HEADER_NAME ]; then make_head $HEADER_NAME; fi

if [ -a $FILE_NAME ]; then
	$ANS=""
	while [ "$ANS" != "yes" && "$ANS" != "no" ]; do
		echo "file exists. remove? [yes/no] "
		read ANS
	done
	if [ "$ANS" == "no" ]; then exit 1; fi
fi

cat > $FILE_NAME << EOF
/* ${FILE_NAME}, generated by me */
#include "${HEADER_NAME}"



EOF




